    <%= f.label :summary %>
    <%= f.text_area :summary, :class => 'redactor', :rows => 10 %>
  </p>
  <p class="field">
    <%= f.label :content %>
    <%= f.text_area :content, :class => 'redactor', :rows => 30 %>
  </p>
  <p class="field">
    <%= f.label :posttype %>
    <%= f.text_field :posttype %>
  </p>
  <p class="field">
    <%= f.label :tags %>
    <%= f.text_field :tags %>
  </p>
  <p class="actions">
    <%= f.submit %>
  </p>
<% end %>
