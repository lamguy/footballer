<h1>Listing matches</h1>

<table>
  <tr>
    <th>Team home</th>
    <th>Team away</th>
    <th>Team home goal</th>
    <th>Team away goal</th>
    <th>Statistics</th>
    <th>Stadium</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%= match.team_home_id %></td>
    <td><%= match.team_away_id %></td>
    <td><%= match.team_home_goal %></td>
    <td><%= match.team_away_goal %></td>
    <td><%= match.statistics %></td>
    <td><%= match.stadium %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

