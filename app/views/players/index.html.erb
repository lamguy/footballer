<h1>Listing players</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Born</th>
    <th>Nationality</th>
    <th>Bio</th>
    <th>Photo</th>
    <th>Retired</th>
    <th>History</th>
    <th>Team</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.born %></td>
    <td><%= player.nationality %></td>
    <td><%= player.bio %></td>
    <td><%= player.photo %></td>
    <td><%= player.retired %></td>
    <td><%= player.history %></td>
    <td><%= player.team %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

