<div class="comment-item <%= cycle("even", "odd") %>">
	<div class="row">

	    <div class="voting small-2 columns">
	          <input type="hidden" value="5219535">
	          <%= link_to 'up vote', vote_post_comment_path(comment, :type => 'up'), :method => :post, :class => 'vote-up-off' %>
	          <span class="vote-count-post "><%= comment.reputation_for(:votes).to_i %></span>
	          <%= link_to 'up vote', vote_post_comment_path(comment, :type => 'down'), :method => :post, :class => 'vote-down-off' %>
	    </div>
		<div class="comment-body small-10 columns">
			<%= simple_format(comment.comment).html_safe %>
		</div>
	</div>
	<div class="comment-footer row">
		<div class="comment-meta small-6 columns">
			<a href="">Sửa</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
			<a href="">Báo cáo vi phạm</a>&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
			<a href="">Trả lời</a>
		</div>
		<div class="comment-author small-6 columns">
			<%= link_to image_tag(comment.user.profile_photo, :alt => 'Awesome profile', :size => '40x40', :class => 'comment-author-avatar'), edit_user_registration_path %>
			<span class="author-name-meta">
				Bởi <strong><%= comment.user.firstname + ' ' + comment.user.lastname %></strong> - 2h trước <br>
				<a href="" class="button xsmall green">Theo</a>
			</span>
		</div>
	</div>
</div>